<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".question">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:elevation="10dp"
        app:cardBackgroundColor="#d60e0e0e"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="557dp"

            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#ff1a1d"
                android:textSize="85dp"
                android:textStyle="bold"
                tools:text="20" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="#ffffff"
                >

                <TextView xmlns:tools="http://schemas.android.com/tools"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="#ffb146"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    tools:text="QUESTION 1/5"
                    android:background="#ff1a1d"
                    tools:textColor="#ffb146"
                    tools:textSize="20dp"
                    tools:textStyle="bold" />

                <TextView xmlns:tools="http://schemas.android.com/tools"
                    tools:text="which player has the highest number of tickets so far?"
                    android:layout_marginHorizontal="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="71dp"
                    android:textSize="10dp"
                    tools:textSize="17dp"
                    android:layout_weight="6" />
            </LinearLayout>



            <android.support.v7.widget.CardView
                android:layout_marginTop="35dp"
                android:layout_marginHorizontal="13dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:cardElevation="10dp"
                app:cardCornerRadius="20dp"
                android:background="#fff">

                <TextView xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#ff1a1d"
                    android:textSize="27dp"
                    tools:text="abcd"

                    tools:textSize="27dp" />


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="13dp"
                app:cardElevation="10dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:background="#fff">
            <TextView xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#ff1a1d"
                android:textSize="27dp"
                tools:text="abcd"

                tools:textSize="27dp" />


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="13dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:background="#fff">

                <TextView xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#ff1a1d"
                    android:textSize="27dp"
                    tools:text="abcd"

                    tools:textSize="27dp" />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginTop="20dp"

                android:layout_marginHorizontal="13dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:cardCornerRadius="20dp"
                android:background="#fff">
                <TextView xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:textColor="#ff1a1d"
                    android:textSize="27dp"
                    tools:text="abcd"

                    tools:textSize="27dp" />




            </android.support.v7.widget.CardView>





        </LinearLayout>


    </android.support.v7.widget.CardView>








</RelativeLayout>
